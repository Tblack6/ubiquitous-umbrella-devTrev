<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TODO List</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #8e44ad, #3498db);
            color: white;
        }
        h1 {
            margin-bottom: 20px;
        }
        .todo-card {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .todo-item {
            display: flex;
            justify-content: space-between;
            padding: 10px;
            border: 2px solid white;
            border-radius: 5px;
            background-color: rgba(255, 255, 255, 0.1);
        }
        .todo-item.completed {
            text-decoration: line-through;
            background-color: rgba(255, 255, 255, 0.7);
            color: black;
        }
        .actions {
            display: flex;
            gap: 5px;
        }
        .update-item, .delete-item {
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .update-item {
            background-color: #3498db;
            color: white;
        }
        .delete-item {
            background-color: #e74c3c;
            color: white;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
<h1>TODO List</h1>

<div class="todo-card">
    <% todos.forEach(function(todo) { %>
        <div class="todo-item <%= todo.completed ? 'completed' : '' %>" data-id="<%= todo._id %>">
            <span class="todo-text"><%= todo.text %></span>
            <div class="actions">
                <button class="update-item">Update</button>
                <button class="delete-item">Delete</button>
            </div>
        </div>
    <% }); %>
</div>

<input type="text" id="new-todo-input" placeholder="New TODO">
<button id="add-todo-item">Add</button>

<script>
    $(document).ready(function () {
        $('.todo-item').click(function () {
            const id = $(this).data('id');
            const completed = !$(this).hasClass('completed');
            $.post(`/todos/update-completed/${id}`, { completed }, () => location.reload());
        });

        $('.delete-item').click(function (e) {
            e.stopPropagation();
            const id = $(this).closest('.todo-item').data('id');
            $.post(`/todos/delete/${id}`, () => location.reload());
        });

        $('#add-todo-item').click(function () {
            const text = $('#new-todo-input').val().trim();
            if (text) $.post('/todos', { text }, () => location.reload());
        });
//console log right here??
        $('.update-item').click(function (e) {
            e.stopPropagation();
            const id = $(this).closest('.todo-item').data('id');
            console.log(id);
            const currentText = $(this).siblings('.todo-text').text().trim();
            const newText = prompt("Update TODO:", currentText);
            if (newText && newText !== currentText) {
                $.ajax({
                    url: `/todos/update-text/${id}`,
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ text: newText }),
                    success: function () {
                        location.reload();
                    },
                    error: function () {
                        alert('Failed to update TODO.');
                    }
                });
            }
        });
    });
</script>

</body>
</html>
