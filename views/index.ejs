<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Black Friday Bingo Card</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #8e44ad, #3498db);
            color: white;
        }
        h1 {
            margin-bottom: 20px;
            font-size: 2.5em;
        }
        .bingo-card {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 10px;
            max-width: 600px;
            margin: 20px;
        }
        .bingo-item {
            padding: 15px;
            border: 2px solid #fff;
            border-radius: 5px;
            text-align: center;
            background-color: rgba(255, 255, 255, 0.1);
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
        }
        .bingo-item.completed {
            background-color: rgba(255, 255, 255, 0.7);
            color: #34495e;
            text-decoration: line-through;
            transform: scale(1.05);
        }
    </style>
</head>
<body>

<h1>Black Friday Bingo Card</h1>

<div class="bingo-card">
    <div class="bingo-item">Someone Getting Trampled</div>
    <div class="bingo-item">Shoppers Fighting Over Item</div>
    <div class="bingo-item">Unattended Child</div>
    <div class="bingo-item">Parking Lot Fender Bender</div>
    <div class="bingo-item">People Camping Outside Store</div>
    <div class="bingo-item">Declined Credit Card</div>
    <div class="bingo-item">Shopping Cart With A Janky Wheel</div>
    <div class="bingo-item">Missing Price Tag</div>
    <div class="bingo-item">Ridiculously Long Line</div>
    <div class="bingo-item">Shoplifters</div>
    <div class="bingo-item">People Cutting In Line</div>
    <div class="bingo-item">Crowd Booing Someone</div>
    <div class="bingo-item">Angry Store Worker</div>
    <div class="bingo-item">Annoying Christmas Music</div>
    <div class="bingo-item">Someone Buying A Bunch Of Gift Cards</div>
    <div class="bingo-item">Store Security Sensor Beeping</div>
    <div class="bingo-item">Screaming Child</div>
    <div class="bingo-item">No More Shopping Carts</div>
    <div class="bingo-item">Credit Card Machine Goes Down</div>
    <div class="bingo-item">Cash Register Runs Out Of Tape</div>
    <div class="bingo-item">Empty Sale Rack</div>
    <div class="bingo-item">Arms Full Of Items</div>
    <div class="bingo-item">Shopping Bag Rips</div>
    <div class="bingo-item">Shopper In Pajamas And Slippers</div>
</div>

<script>
    const bingoItems = document.querySelectorAll('.bingo-item');
    bingoItems.forEach(item => {
        item.addEventListener('click', () => {
            item.classList.toggle('completed');
            checkBingo();
        });
    });

    function checkBingo() {


      //my row ccheck
        const card = Array.from(bingoItems).map(item => item.classList.contains('completed') ? 1 : 0);
        const size = 5;
        let bingo = false;

        // Check rows 
        for (let i = 0; i < size; i++) {
            if (card.slice(i * size, i * size + size).every(val => val === 1) || // Check row
                card.filter((_, index) => index % size === i).every(val => val === 1)) { // Check column
                bingo = true;
            }
        }

        // Check diagonals
        if (card.filter((_, index) => index % (size + 1) === 0).every(val => val === 1) || // Top-left to bottom-right
            card.filter((_, index) => index % (size - 1) === 0 && index !== 0 && index !== card.length - 1).every(val => val === 1)) { // Top-right to bottom-left
            bingo = true;
        }

        if (bingo) {
            setTimeout(() => alert('Congratulations! You got a Bingo!'), 100);
        }
    }
</script>

</body>
</html>